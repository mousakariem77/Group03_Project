<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/icon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body onload="time()">
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 text-white bg-theme p-0" style="min-height: 750px;">
                <a href="#" class="app-brand text-decoration-none d-block mt-3 mb-3 ml-4">
                    <h2 class="m-0 fw-bold"><span class="text-primary">W3</span>COURSE</h2>
                </a>
                <ul class="navbar-nav flex-grow-1 ml-2">
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Index">
                            <i class="menu-icon tf-icons bx bx-home-circle"></i>
                            Dashboards</a>
                    </li>
                    <li class="menu-header small text-uppercase mt-2">
                        <span class="menu-header-text text-theme">Apps &amp; Pages</span>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Instructor">
                            <i class="menu-icon tf-icons bx bx-user-voice"></i>
                            Instructor</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Learner">
                            <i class="menu-icon tf-icons bx bx-group"></i>
                            Learner</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Course">
                            <i class="menu-icon tf-icons bx bx-book"></i>
                            Course</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Notification">
                            <i class="menu-icon tf-icons bx bx-bell"></i>
                            Notification</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Transaction">
                            <i class="menu-icon tf-icons bx bx-wallet"></i>
                            Transaction</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Email">
                            <i class="menu-icon tf-icons bx bx-envelope"></i>
                            Email</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Chat" asp-action="Index">
                            <i class="menu-icon tf-icons bx bx-chat"></i>
                            Chat</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Index">
                            <i class="menu-icon tf-icons bx bx-calendar"></i>
                            Calendar</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Privacy">
                            <i class="menu-icon tf-icons bx bx-grid"></i>
                            Kanban</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Privacy">
                            <i class="menu-icon tf-icons bx bx-lock-open-alt"></i>
                            Authentications</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Privacy">
                            <i class="menu-icon tf-icons bx bx-lock-open-alt"></i>
                            Change Password</a>
                    </li>
                    <li class="menu-header small text-uppercase mt-2">
                        <span class="menu-header-text text-theme">Other &amp; Pages</span>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Privacy">
                            <i class="menu-icon tf-icons bx bx-support"></i>
                            Support</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Privacy">
                            <i class="menu-icon tf-icons bx bx-cog"></i>
                            Setting</a>
                    </li>
                </ul>
            </div>
            <div class="col-10 p-0 layout-theme text-white">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 p-0" style="min-height: 90px;">
                            <nav class="navbar navbar-expand-sm navbar-dark bg-theme pt-2 pb-3">
                                <div class="container-fluid bg-theme mt-3 ml-5">
                                    <h5 class="card-title mb-0 text-theme">@ViewData["Title"]</h5>
                                    
                                    <ul class="navbar-nav flex-row align-items-center ms-auto">
                                        <li class="nav-item ">
                                            <div id="clock" class="text-theme"></div>
                                        </li>
                                        <li class="nav-item ml-3">
                                            <a href="#" class="icon-taskbar theme-toggle">
                                                <i class='bx bx-sun text-theme' title="Light Mode"></i>
                                                <i class='bx bx-moon text-theme'title="Dark Mode"></i>
                                            </a>
                                        </li>
                                        <li class="nav-item ml-3">
                                            <a class="notifi-icon">
                                                <i class="tf-icons bx bx-bell text-theme"></i>
                                                <div class="badge bg-danger rounded-pill">5</div>
                                            </a>
                                        </li>
                                        <li class="user nav-item cursor-pointer">
                                            <div class="dropdown">
                                                <a class="avatar-user btn dropdown-toggle border-0 p-0"
                                                    style="border-top: 0; width: 50px;" data-bs-toggle="dropdown">
                                                    <img src="~/img/avatars/1.png" alt class="w-px-40 h-auto rounded-circle"
                                                        style="width: 90%;" />
                                                </a>
                                                <ul class="dropdown-menu dropdown-menu-end mt-2"
                                                    style="min-width: 10rem; z-index: 1000;">
                                                    <li class="d-flex">
                                                        <div class="flex-shrink-0 ml-2 mr-3">
                                                            <div class="avatar avatar-online">
                                                                <img src="~/img/avatars/1.png" alt
                                                                    class="w-px-40 h-auto rounded-circle" />
                                                            </div>
                                                        </div>
                                                        <div class="flex-grow-1 text-theme">
                                                            <span class="fw-medium d-block">Admin</span>
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <a class="p-2 dropdown-item text-theme mt-2" asp-controller="Home"
                                                            asp-action="Profile">
                                                            <i class="bx bx-user me-2"></i>
                                                            <span class="align-middle">My Profile</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="p-2 dropdown-item text-theme" href="#">
                                                            <i class='bx bx-cog' ></i>
                                                            <span class="align-middle">Setting</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="p-2 dropdown-item text-theme" asp-controller="Admin"
                                                            asp-action="Logout">
                                                            <i class="bx bx-log-out"></i>
                                                            <span class="align-middle">Sign out</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </nav>
                        </div>
                        <div class="col-lg-12 text-white p-0 mb-4">
                            <div class="container-fluid">
                                <main role="main" class="pb-3">
                                    @RenderBody()
                                </main>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
