<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/icon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body onload="time()">
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 text-white bg-theme p-0" style="min-height: 750px;">
                <a href="#" class="app-brand text-decoration-none d-block mt-3 mb-3 ml-4">
                    <h2 class="m-0 fw-bold"><span class="text-primary">W3</span>COURSE</h2>
                </a>
                <ul class="navbar-nav flex-grow-1 ml-2">
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="menu-icon tf-icons bx bx-home-circle"></i>
                            Dashboards</a>
                    </li>
                    <li class="menu-header small text-uppercase mt-2">
                        <span class="menu-header-text text-theme">Apps &amp; Pages</span>
                    </li>
                    <li class="nav-item pl-3 active">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Instructor" asp-action="Index">
                            <i class="menu-icon tf-icons bx bx-user-voice"></i>
                            Instructor</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Learner" asp-action="Index">
                            <i class="menu-icon tf-icons bx bx-group"></i>
                            Learner</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Course" asp-action="Index">
                            <i class="menu-icon tf-icons bx bx-book"></i>
                            Course</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Notification" asp-action="Privacy">
                            <i class="menu-icon tf-icons bx bx-bell"></i>
                            Notification</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Transaction" asp-action="Index">
                            <i class="menu-icon tf-icons bx bx-wallet"></i>
                            Transaction</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Email" asp-action="Index">
                            <i class="menu-icon tf-icons bx bx-envelope"></i>
                            Email</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Chat" asp-action="Index">
                            <i class="menu-icon tf-icons bx bx-chat"></i>
                            Chat</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Index">
                            <i class="menu-icon tf-icons bx bx-calendar"></i>
                            Calendar</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Privacy">
                            <i class="menu-icon tf-icons bx bx-grid"></i>
                            Kanban</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Privacy">
                            <i class="menu-icon tf-icons bx bx-lock-open-alt"></i>
                            Authentications</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Privacy">
                            <i class="menu-icon tf-icons bx bx-lock-open-alt"></i>
                            Change Password</a>
                    </li>
                    <li class="menu-header small text-uppercase mt-2">
                        <span class="menu-header-text text-theme">Other &amp; Pages</span>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Privacy">
                            <i class="menu-icon tf-icons bx bx-support"></i>
                            Support</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link text-theme" asp-area="" asp-controller="Admin" asp-action="Privacy">
                            <i class="menu-icon tf-icons bx bx-cog"></i>
                            Setting</a>
                    </li>
                </ul>
            </div>
            <div class="col-10 p-0 layout-theme text-white">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 p-0" style="min-height: 90px;">
                            <nav class="navbar navbar-expand-sm navbar-dark bg-theme pt-2 pb-3">
                                <div class="container-fluid bg-theme mt-3 ml-5">
                                    <h5 class="card-title mb-0 text-theme">@ViewData["Title"]</h5>
                                    
                                    <ul class="navbar-nav flex-row align-items-center ms-auto">
                                        <li class="nav-item ">
                                            <div id="clock" class="text-theme"></div>
                                        </li>
                                        <li class="nav-item ml-3">
                                            <a href="#" class="icon-taskbar theme-toggle">
                                                <i class='bx bx-sun text-theme' title="Light Mode"></i>
                                                <i class='bx bx-moon text-theme'title="Dark Mode"></i>
                                            </a>
                                        </li>
                                        <li class="nav-item ml-3">
                                            <a class="notifi-icon">
                                                <i class="tf-icons bx bx-bell text-theme"></i>
                                                <div class="badge bg-danger rounded-pill">5</div>
                                            </a>
                                        </li>
                                        <li class="nav-item ml-3">
                                            <div class="avatar-admin mr-2">
                                                <img class="avatar-initial rounded-circle bg-label-warning" src="~/img/1.png">
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </nav>
                        </div>
                        <div class="col-lg-12 text-white p-0 mb-4">
                            <div class="container-fluid">
                                <main role="main" class="pb-3">
                                    @RenderBody()
                                </main>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
