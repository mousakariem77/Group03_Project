@model WebLibrary.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<h1>Delete Category</h1>
<form asp-action="Delete">
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <input asp-for="CategoryId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="CategoryName"></label>
        <input asp-for="CategoryName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" readonly />
    </div>

    <p>@ViewBag.Message</p>
    <button type="submit" class="btn btn-primary">Delete</button>
</form>
@{
    var errorMessage = ViewBag.Message as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}