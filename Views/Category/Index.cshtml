@model IEnumerable<WebLibrary.Models.Category>;

@{
    ViewData["Title"] = "Index";
      Layout = "~/Views/Shared/_Login.cshtml";
}
<h1>List Category</h1>
<a class="btn btn-success mb-2" asp-action="Create">Add new Category</a>
<table class="table">
    <thead>
        <tr>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody> 
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.CategoryId">Delete</a>
                </td>
            </tr>
        }
        
    </tbody>
   

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }