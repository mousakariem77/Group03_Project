@model IEnumerable<WebLibrary.Models.Lesson>;

@{
    ViewData["Title"] = "Index";
      Layout = "~/Views/Shared/_Login.cshtml";
}

<h1>List Lesson</h1>
<a class="btn btn-success mb-2" href="@Url.Action("Create", "Lesson", new { chapterId = ViewBag.ChapterId, courseId = ViewBag.CourseId })">Add new Lesson</a>
<a class="btn btn-success mb-2" href="@Url.Action("Index", "Chapter", new { courseId = ViewBag.CourseId })">Back to Chapter</a>
<table class="table">
    <thead>
        <tr>
            <th>CourseName</th>
            <th>ChapterName</th>
            <th>LessonName</th>
            <th>Description</th>
            <th>PercentToPassed</th>
            <th>MustBeCompleted</th>
            <th>Content</th>
            <th>Index</th>
            <th>Type</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var lesson in Model)
            {
                <tr>
                    <td>@ViewBag.CourseName</td>
                    <td>@ViewBag.ChapterName</td>
                    <td>@lesson.LessonName</td>
                    <td>@lesson.Description</td>
                    <td>@lesson.PercentToPassed</td>
                    <td>@lesson.MustBeCompleted</td>
                    <td>@lesson.Content</td>
                    <td>@lesson.Index</td>
                    <td>@lesson.Type</td>
                    <td>@lesson.Time</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="11">No lessons found.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}